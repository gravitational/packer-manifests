{
    "builders": [
        {
            "accelerator": "kvm",
            "boot_command": [
                "<esc><wait>",
                "vmlinuz initrd=initrd.img net.ifnames=0 biosdevname=0 ",
                "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/rhel-7.X-qemu/ks.cfg",
                "<enter>"
            ],
            "boot_wait": "5s",
            "disk_interface": "virtio",
            "disk_size": "40960",
            "format": "qcow2",
            "headless": "false",
            "http_directory": "http",
            "iso_checksum_type": "sha256",
            "iso_checksum_url": "{{user `checksum_url`}}",
            "iso_url": "{{user `url`}}",
            "net_device": "virtio-net",
            "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
            "ssh_password": "vagrant",
            "ssh_username": "vagrant",
            "ssh_wait_timeout": "20m",
            "type": "qemu",
            "vm_name": "{{user `vm_name`}}.qcow2"
        }
    ],
    "post-processors": [
        {
            "compression_level": 9,
            "output": "{{user `vm_name`}}.qcow2.gz",
            "type": "compress"
        }
    ],
    "provisioners": [
        {
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "scripts/sshd.sh",
                "scripts/cleanup.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "checksum_url": "{{env `ISO_LOCATION`}}/SHA256SUMS",
        "url": "{{env `ISO_LOCATION`}}/rhel-server-7.2-x86_64-dvd.iso",
        "vm_name": "rhel-7.2-qemu"
    }
}
